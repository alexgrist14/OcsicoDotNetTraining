@model OcsicoTraining.Stasulevich.Lesson4.OrganizationManagment.ViewModels.EmployeeViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Details";
}

<h1>@Localizer["EmployeeDetails"]</h1>

<div>
    <h4>@Localizer["EmployeeHeader"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["EditLink"]</a> |
    <a asp-action="Index">@Localizer["BackToListLink"]</a>
</div>
