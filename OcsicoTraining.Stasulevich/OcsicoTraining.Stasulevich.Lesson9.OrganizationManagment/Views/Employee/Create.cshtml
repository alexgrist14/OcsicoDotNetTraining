@model OcsicoTraining.Stasulevich.Lesson4.OrganizationManagment.ViewModels.EmployeeViewModel
@using OcsicoTraining.Stasulevich.Lesson9.OrganizationManagment.Constants
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Create";
}

<h1>@Localizer["EmployeeCreate"]</h1>

<h4>@Localizer["EmployeeHeader"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Localizer["BackToListLink"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync(ViewNames.ValidationScriptsPartialViewName);}
}
