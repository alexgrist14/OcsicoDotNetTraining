@model SocialNetwork.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container r-container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 style="color: #dadbdf;">Registration new User</h2>
                </div>
                <div class="panel-body">
                    <form class="register-form" method="post" asp-controller="Account" asp-action="Register" role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Name" ></label>
                                    <input asp-for="Name" type="text" name="name" id="name" class="form-control input-sm" placeholder="Name" />
                                    <span asp-validation-for="Name"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" type="email" name="email" id="email" class="form-control input-sm" placeholder="Email Address"/>
                            <span asp-validation-for="Email"></span>
                        </div>

                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" name="password" id="password" class="form-control input-sm" placeholder="Password"/>
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="PasswordConfirm"></label><br />
                                    <input asp-for="PasswordConfirm"class="form-control input-sm" placeholder="Confirm Password"/>
                                    <span asp-validation-for="PasswordConfirm"></span>
                                </div>
                            </div>
                        </div>

                        <div>
                            <input type="submit" value="Registration" class="btn btn-info btn-block" />
                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
