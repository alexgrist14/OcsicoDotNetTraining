@model Kawaii.ViewModels.LoginViewModel

<div class="container r-container">
    <div class="row centered-form">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 style="color: #dadbdf;">Log In</h2>
                </div>
                <div class="panel-body">
                    <form class="register-form" method="post" asp-controller="Account" asp-action="Login"
                          asp-route-returnUrl="@Model.ReturnUrl" role="form">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email"></label><br />
                                    <input asp-for="Email" class="form-control input-sm" />
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label asp-for="Password"></label>
                                    <input asp-for="Password" type="password" name="password" id="password" class="form-control input-sm" placeholder="Password" />
                                    <span asp-validation-for="Password"></span>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div>
                                    <label asp-for="RememberMe"></label><br />
                                    <input asp-for="RememberMe" />
                                </div>
                            </div>
                        </div>
                        <div>
                            <input type="submit" value="Enter" class="btn btn-info btn-block" />
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
