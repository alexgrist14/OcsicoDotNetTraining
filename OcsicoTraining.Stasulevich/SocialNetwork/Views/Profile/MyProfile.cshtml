@model Kawaii.ViewModels.MyProfileViewModel


@{
    ViewData["Title"] = "MyProfile";
}

    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <partial name="~/Views/Shared/Partials/_UserInfoPartial.cshtml" for="UserInfo" />
            </div>
        </div>
        <div class="row follow-container">
            <div class="text-center">
                <div class="side-menu-link">
                    <span><a asp-controller="Subscriptions" asp-action="Followers">Followers: </a>@Model.UserInfo.FollowersCount</span>
                </div>
                <div class="side-menu-link">
                    <span><a asp-controller="Subscriptions" asp-action="Followings">Followings: </a>@Model.UserInfo.FollowingsCount</span>
                </div>
            </div>
        </div>
    </div>
